<?xml version="1.0" ?>
<robot name="gopigo3_sim" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find gopigo3_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find gopigo3_description)/urdf/gopigo3.gazebo.xacro"/>

<!-- Base Footprint Link (base_footprint) -->
  <link name="base_footprint"/>
<!-- JOINT base_link to base_footprint-->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <!--origin xyz="0.0 0.0 0.010" rpy="0 0 0"/-->
    <origin xyz="0 0 0.0875" rpy="0 0 0"/>
  </joint>

<!-- Base Link (base_link) -->
  <link name="base_link">
    <visual>
      <!--origin xyz="-0.032 0 0.0" rpy="0 0 0"/-->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!--mesh filename="package://turtlebot3_description/meshes/bases/burger_base.stl" scale="0.001 0.001 0.001"/-->
        <box size="0.25 0.25 0.125"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="-0.032 0 0.070" rpy="0 0 0"/>
      <geometry>
        <!--box size="0.140 0.140 0.143"/-->
        <box size="0.25 0.25 0.125"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="8.2573504e-01"/>
      <inertia ixx="2.2124416e-03" ixy="-1.2294101e-05" ixz="3.4938785e-05"
               iyy="2.1193702e-03" iyz="-5.0120904e-06"
               izz="2.0064271e-03" />
    </inertial>
  </link>
<!-- JOINT wheel_left_link to base_link -->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <!--origin xyz="0.0 0.08 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/-->
    <origin xyz="0.1 0.15 0.0125" rpy="0 0 0" /> 
    <axis xyz="0 1 0"/>
  </joint>
<!-- Left Wheel link (wheel_left_link) -->
  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <!--mesh filename="package://turtlebot3_description/meshes/wheels/left_tire.stl" scale="0.001 0.001 0.001"/-->
        <cylinder length="0.05" radius="0.1" />
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!--cylinder length="0.018" radius="0.033"/-->
        <cylinder length="0.05" radius="0.1" />
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>
<!-- JOINT wheel_right_link to base_link -->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <!--origin xyz="0.0 -0.080 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/-->
    <origin xyz="0.1 -0.15 0.0125" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>
<!-- Right Wheel -->
  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <!--mesh filename="package://turtlebot3_description/meshes/wheels/right_tire.stl" scale="0.001 0.001 0.001"/-->
        <cylinder length="0.05" radius="0.1" />
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!--cylinder length="0.018" radius="0.033"/-->
        <cylinder length="0.05" radius="0.1" />
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>
<!-- JOINT caster_back_link to base_link-->
  <joint name="caster_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_link"/>
    <!--origin xyz="-0.081 0 -0.004" rpy="-1.57 0 0"/-->
    <origin xyz="-0.1 0 -0.0625" rpy="0 0 0" />
  </joint>
<!-- Caster link (caster_back_link)-->
  <link name="caster_back_link">
    <visual name="caster_visual">
      <origin xyz="0 0.001 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025" />
      </geometry>
    </visual>
    
    <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0"/>
      <geometry>
        <!--box size="0.030 0.009 0.020"/-->
        <sphere radius="0.025" />
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

<!-- JOINT  imu_link to base_link -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.032 0 0.068" rpy="0 0 0"/>
  </joint>

<!-- IMU Link (imu_link) -->
  <link name="imu_link"/>
<!-- JOINT base_scan to base_link -->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <!--origin xyz="-0.032 0 0.172" rpy="0 0 0"/-->
    <origin xyz="0.01 0.05 0.125" rpy="0 0 -1.6"/>
  </joint>
<!-- Laser Distance Sensor (base_scan) -->
  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <!--mesh filename="package://turtlebot3_description/meshes/sensors/lds.stl" scale="0.001 0.001 0.001"/-->
        <mesh filename="package://gopigo3_description/meshes/X4.stl" scale="0.0015 0.0015 0.0015"/> 
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <!--origin xyz="0.015 0 -0.0065" rpy="0 0 0"/-->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!--cylinder length="0.0315" radius="0.055"/-->
        <cylinder length="0.01575" radius="0.0275"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>
<!-- JOINT camera to base_link -->
  <joint name="joint_camera" type="fixed">
    <axis xyz="0 0 1" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera"/>
  </joint>
<!-- 2D Camera (camera) -->
  <link name="camera">
    <visual>
      <origin xyz="0.125 0 0.025" rpy="0 1.570795 0" />
      <geometry>
          <mesh filename="package://gopigo3_description/meshes/piCamera.stl" scale="0.0025 0.0025 0.0025"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    
    <collision>
      <origin xyz="0.1375 0 0.025" rpy="0 -1.570795 0" />
      <geometry>
        <box size="0.075 0.075 0.025"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0.1375 0 0.025" rpy="0 -1.570795 0" />
      <mass value="1e-3" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
<!-- JOINT distance_sensor to base_link -->
  <joint name="distance_sensor_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="base_link"/>
    <child link="distance_sensor"/>
  </joint>
<!-- Distance Sensor -->
  <link name="distance_sensor">
    <visual>
      <origin xyz="0.1 0 0.0755" rpy="1.570795 0 1.570795" />
      <geometry>
        <mesh filename="package://gopigo3_description/meshes/IR_Sensor_Sharp_GP2Y_solid.stl" scale="0.0025 0.0025 0.0025"/>
      </geometry>
      <material name="red"/>
    </visual>

    <collision>
      <origin xyz="0.1 0 0.0775" rpy="1.570795 0 1.570795" />
      <geometry>
        <box size="0.005 0.005 0.005"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0.1 0 0.0755" rpy="1.570795 0 1.570795" />
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

</robot>
